@model HomelessHelper.Models.InTakeModel
@{
    ViewBag.Title = "Intake";
}

<h2>Intake</h2>


@using (Ajax.BeginForm("PostInTakeForm", new AjaxOptions { InsertionMode = InsertionMode.Replace }))
{
    <div class="intake-form">
        <div class="col-md-10 form-group">
            @Html.LabelFor(model => model.FirstName)
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="col-md-10 form-group">
            @Html.LabelFor(model => model.LastName)
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="col-md-10 form-group">
            @Html.LabelFor(model => model.SSN)
            @Html.EditorFor(model => model.SSN)
            @Html.ValidationMessageFor(model => model.SSN)
        </div>
        <div class="col-md-10 form-group">
            @Html.LabelFor(model => model.DateOfBirth)
            @Html.EditorFor(model => model.DateOfBirth)
            @Html.ValidationMessageFor(model => model.DateOfBirth)
        </div>
        <div class="col-md-10 form-group">
            @Html.LabelFor(model => model.Race)
            @Html.EnumDropDownListFor(model => model.Race)
            @Html.ValidationMessageFor(model => model.Race)
        </div>
        <div class="col-md-10 form-group">
            @Html.LabelFor(model => model.Gender)
            @Html.EnumDropDownListFor(model => model.Gender)
            @Html.ValidationMessageFor(model => model.Gender)
        </div>
        <div class="col-md-10 form-group">
            @Html.Label("Are you a Veteran?")
            @Html.CheckBox("isVet")
        </div>
        @*        if IsVet, show rest of fields*@
        <div>
            <div class="col-md-10 form-group">
                @Html.LabelFor(model => model.VetStatus.YearEnteredService)
                @Html.EditorFor(model => model.VetStatus.YearEnteredService)
                @Html.ValidationMessageFor(model => model.VetStatus.YearEnteredService)
            </div>
            <div class="col-md-10 form-group">
                @Html.LabelFor(model => model.VetStatus.YearLeftService)
                @Html.EditorFor(model => model.VetStatus.YearLeftService)
                @Html.ValidationMessageFor(model => model.VetStatus.YearLeftService)
            </div>
        </div>
        <input type="submit" value="Submit"/>
    </div>
}